    "@babel/preset-env": "^7.20.2",
    "@types/jest": "^29.5.14",
    "@types/web": "^0.0.212",
    "babel": "^6.23.0",
    "babel-jest": "^29.3.1",
    "babel-loader": "^9.1.2",
    "dts-bundle": "^0.7.3",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.20",
    "path": "^0.12.7",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.2.6",
